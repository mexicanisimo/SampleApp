<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SampleApp">

    <Style x:Key="StyleMenu" TargetType="{x:Type Menu}">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundColorBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundColorBrush}" />
    </Style>

    <Style x:Key="StyleMenuItems" TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="{StaticResource ForegroundColorBrush}" />
    </Style>
</ResourceDictionary>